<div class="container-fluid d-flex justify-content-center">
    <div class="col-6">
        <%= search_form_for @q, class: "d-flex container justify-content-center p-2" , url: :root do |f| %>
            <%= f.search_field :name_cont, placeholder: "Search Products..." , class: "border border-primary col-6 rounded-pill me-3"%>
            <%= f.submit "Search", class: "border border-primary btn btn-warning" %>
        <% end %>
    </div>
    <% if current_user.is_admin==true %>
        <div class="col-2 d-flex m-2">
            <%= link_to "Add Product", new_product_path, class: "btn btn-success align-self-start" %>
        </div>
    <% end %>
</div>

<div class="container-fluid">
    <h3>Products</h3>
    <% @products.each do |product| %>
        <%= link_to product_path(product), class: "product-block" do %>
            <div class="d-inline-flex p-2 w-25">
                <div class="container border border-3" style="height:450px">
                    <div class="img-fluid text-center border border-1">
                        <img src=<%= product.image_link %> width="50%" height="180px">
                    </div>
                    <br/>
                    <p style="height:5%">
                        <span class="h6">Name:</span> <%= product.name %>
                    </p>
                    <p class="overflow-auto" style="height:20%">
                        <span class="h6">Description:</span> <%= product.description%>
                    </p>
                    <p style="height:5%">
                        <span class="h6">Price:</span> &#8377; <%= product.price %>
                    </p>
                </div>
            </div>
        <% end %>
    <% end %>
</div>
