<div class="container">
    <h4>All orders</h4>
    <div>
        <% @orders.each do |order| %>
            <div class="d-flex col-6 border border-1 m-3">
                <div class="col-6">
                    <p>User: <%= order.username(order.user_id) %></p>
                    <p>Ordered at: <%= order.created_at.localtime.strftime("%d-%m-%Y, %H:%M") %></p>
                </div>
                <div class="d-flex align-items-center justify-content-center w-50">
                    <p class="btn <%= order.button_color_based_on_status(order) %>">
                        Status: <%= order.status %>
                    </p>
                </div>
                <div class="d-flex align-items-center justify-content-center w-50">
                    <!-- View order file path: orders/show.html.erb -->
                    <p><%= link_to "View order details", order_path(order.id), class: "btn btn-secondary" %></p>
                </div>
            </div>
        <% end %>
    </div>
</div>
